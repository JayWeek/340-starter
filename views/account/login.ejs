<main class="error-page">
  <% if (title) { %>
  <h1 class="h1-title"><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

  <%- messages() %>
  <% if (errors && errors.array && errors.array().length > 0) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>



  <form id="loginForm" action="/account/login" method="post">
  <div class="container">
    <!--Email input field-->
    <label for="account_email"><b>Email:</b></label>
    <input type="email" id="account_email" placeholder="Enter Email" name="account_email" required>

    <!--Password input field-->
    <label for="account_password"><b>Password:</b></label>
    <div>
     <p> There must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.</p>
    </div>
    <input type="password" id="account_password" placeholder="Enter Password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>

    <!--Login button-->
    <button type="submit">Login</button>

    <!-- Login link (styled like register form) -->
    <p>No account? <a href="/account/register">Sign-up</a></p>
  </div>
</form>

</main>