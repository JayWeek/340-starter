<main class="error-page">
  <% if (title) { %>
  <h1 class="h1-title"><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

  <%- messages() %>

  <% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <%  }) %>
  </ul>
  <% } %>


  <form action="/account/register" method="post">  <!--sends the data as post to rout path /account/register which also delivers the view -->
        <div class="container">
            <!--First Name input field-->
            <label for="account_firstname"><b>First Name</b></label>
            <input type="text" id="account_firstname" placeholder="Enter First Name" name="account_firstname" required value="<%= locals.account_firstname %>">

            <!--Last Name input field-->
            <label for="account_lastname"><b>Last Name</b></label>
            <input type="text" id="account_lastname" placeholder="Enter Last Name" name="account_lastname" required value="<%= locals.account_lastname %>">

            <!--Email input field-->
            <label for="account_email"><b>Email</b></label>
            <input type="email" id="account_email" placeholder="Enter Email Address" name="account_email" required value="<%= locals.account_email %>">

            <!--Password input field-->
            <label for="account_password"><b>Password</b></label>
            <div>
              <p> There must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.</p>
            </div>
            <input type="password" id="account_password" placeholder="Enter Password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>

            <!--Register button-->
            <button type="submit">Register</button>

            <!-- Login link within the same form -->
            <p>Already have an account? <a href="/account/login">Login here</a></p>
        </div>
    </form>
</main>